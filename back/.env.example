# 后台安全路径前缀（用于防止爬虫，例如: admin, management, etc.）
ADMIN_PATH=abc

# Borg 备份仓库目录
BORG_REPO_PATH=/path/to/borg/repo

# 普通备份目录
BACKUP_DIR=/path/to/backup/dir

# 管理员账号密码
ADMIN_USERNAME=admin
ADMIN_PASSWORD=password123

# CDN 配置（true 表示使用 CDN，从 CF-Connecting-IP 或 X-Real-IP 获取真实 IP，false 表示直接使用 req.ip）
USE_CDN=false

# Telegram 机器人配置（用于登录失败通知）
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# 服务器端口
PORT=3000

# 数据库路径（JSON 文件存储）
DB_PATH=./data/login.json
